@model Store.Detail[]

@{
    ViewData["Title"] = "Результаты поиска";
}

<h1>Результаты поиска</h1>

@if (Model.Length == 0)
{
    <p>Ничего не найдено.</p>
}
else
{
    <ul>
        @foreach (var detail in Model)
        {
            <li><a href="@Url.Action("Index", "Detail", new { id = detail.Id})">@detail.Title</a></li>
        }
    </ul>
}